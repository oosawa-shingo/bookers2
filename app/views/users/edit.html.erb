<div class="mb-3">
  <%= flash[:notice] %>
</div>

<div class="container">
  <div class="row">
    <div class="col-5 mx-auto">
      <h2>User info</h2>
        <% if @user.errors.any? %>
          <h3><%= @user.errors.count %>error prohibited this obj from being saved:</h3>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>

        <%= form_with model: @user do |f| %>
          <div class="form_group">
            <div>
              <label for="inputName">Name</label>
            </div>
            <div>
              <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
            </div>
          </div>

          <div class="form_group">
            <label for="inputImage">Image</label>
            <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
          </div>

          <div class="form_group">
            <div>
              <label for="inputIntroduction">Introduction</label>
            </div>
            <div>
              <%= f.text_field :introduction, autofocus: true, id:"inputIntroduction", placeholder:"紹介"%>
            </div>
          </div>

          <div class="form_group">
            <%= f.submit "Update User", class: "btn btn-secondary" %>
          </div>
        <% end %>
    </div>
  </div>
</div>
