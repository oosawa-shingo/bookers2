      </div>

      <div class="action">
        <%= f.submit 'Update Book', class: "btn btn-success btn-sm" %>
      </div>

        <%= link_to "Show", book_path(@book.id) %>

      |

        <%= link_to "Back", books_path %>

      <% end %>
