<div class="mb-3">
  <%= flash[:notice] %>
</div>

<div class="container">
  <div class="row">
    <div class="col-5 mx-auto">
    <h1>Editing Book</h1>

      <% if @book.errors.any? %>
        <%= @book.errors.count %>error prohibited this obj from being saved:
          <div class="errors-message">
            <ul>
              <% @book.errors.full_messages.each do |message| %>
